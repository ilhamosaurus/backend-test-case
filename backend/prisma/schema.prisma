generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  code       String    @unique
  name       String
  books_rent Int       @default(0)
  createdAt  DateTime  @default(now())
  penalty    DateTime?
  Book       Book[]

  @@map("users")
}

model Book {
  id       String @id @default(uuid())
  code     String @unique
  title    String
  author   String
  stock    Int    @default(0)
  borrower String

  user User @relation(fields: [borrower], references: [code], onUpdate: Cascade)

  @@map("books")
}
